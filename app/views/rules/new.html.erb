<h1> Write a new Rule </h1>

<%= form_with(model: @rule) do |form| %>
  
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_field :body%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>